%{
#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include <string.h>
#include "y.tab.h"	/* header file generated by bison */
extern int yylineno;
%}

letter [a-zA-Z]
digit [0-9]
id {letter}+({letter}|{digit})*
Int	("I"|"i")("N"|"n")("T"|"t")
Print ("P"|"p")("R"|"r")("I"|"i")("N"|"n")("T"|"t")
space [ ]
Strin	"\""(((.)|([\n])|([\t])|([\r]))*)"\""


%%
		/* DEFINES */
		
";"				{return SEM;}
"="				{return ASS;}
{Print}			{return PRI;}
{Int}			{
					yylval.integer_num = 0;
					return INTNUM;
				}
[+-]?[0-9]+   		{ 		
					yylval.integer_num = atoi(yytext);			
					return INT; 
				} 
{id}			{
					yylval.ids = yytext;
					return ID;
				}

		/* OTHERS */
[\n]   			{ yylineno++; return '\n'; }
[\t]   			{;}
{Strin}			{	
					yylval.ids = yytext;
					return STR;
				}
{space}			{;}
"//".+\n						{ yylineno++;}
"+" 							{ return ADD;}
"-" 							{ return SUB;}
"*" 							{ return MUL;}
"/" 							{ return DIV;}
"/*"(.+\n?)*"*/"				{ 	
									char* t = strtok(yytext,"\n");
									while( t != NULL ) {
						  				yylineno++;
						  				t = strtok(NULL, "\n");
									}
									yylineno --;
								}
.   			{ return yytext[0]; }

